<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/questText"
        android:text="exexexexex"
        android:textSize="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        />


    <EditText
        android:id="@+id/inputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:text="fsdafsdf"
        app:layout_constraintTop_toBottomOf="@id/questText"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/numText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="exexexexex"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@id/inputText"
        tools:layout_editor_absoluteX="0dp" />

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        app:layout_constraintTop_toBottomOf="@id/numText"
        android:layout_marginTop="5dp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:max="60"
        android:progress="0"
        />


    <Button
        android:id="@+id/btn1"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text="1"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@id/numText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="15dp"
        />

    <Button
        android:id="@+id/btn2"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text="2"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@id/numText"
        app:layout_constraintLeft_toRightOf="@id/btn1"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        />

    <Button
        android:id="@+id/btn3"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text="3"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@id/numText"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginRight="15dp"
        />

    <Button
        android:id="@+id/btn4"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text="4"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@id/btn1"
        app:layout_constraintLeft_toLeftOf="@id/numText"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        />

    <Button
        android:id="@+id/btn5"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text="5"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@id/btn2"
        app:layout_constraintLeft_toRightOf="@id/btn1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <Button
        android:id="@+id/btn6"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text="6"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@id/btn3"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        />


    <Button
        android:id="@+id/btn7"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text="7"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@id/btn4"
        app:layout_constraintLeft_toLeftOf="@id/numText"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        />

    <Button
        android:id="@+id/btn8"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text="8"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@id/btn5"
        app:layout_constraintLeft_toRightOf="@id/btn1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <Button
        android:id="@+id/btn9"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text="9"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@id/btn6"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        />


    <Button
        android:id="@+id/btnCancel"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text="CANCEL"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/btn7"
        app:layout_constraintLeft_toLeftOf="@id/numText"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        />

    <Button
        android:id="@+id/btn0"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text="0"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@id/btn8"
        app:layout_constraintLeft_toRightOf="@id/btn1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <Button
        android:id="@+id/btnEnter"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text="ENTER"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/btn9"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>